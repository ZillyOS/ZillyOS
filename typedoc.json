{
  "entryPoints": ["./src/index.ts"],
  "out": "docs/api",
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeExternals": true,
  "includeVersion": true,
  "theme": "default",
  "name": "ZillyOS API Documentation",
  "readme": "README.md",
  "plugin": ["typedoc-plugin-markdown"],
  "gitRevision": "main",
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/node_modules/**"
  ],
  "categorizeByGroup": true,
  "categoryOrder": [
    "Core",
    "API",
    "Models",
    "Utilities",
    "*"
  ],
  "defaultCategory": "API",
  "sort": [
    "alphabetical"
  ],
  "visibilityFilters": {
    "protected": true,
    "private": false,
    "inherited": true,
    "external": false
  },
  "searchInComments": true,
  "disableSources": false,
  "cleanOutputDir": true
} 