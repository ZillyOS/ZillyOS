{
  "name": "zillys",
  "version": "0.1.0",
  "description": "ZillyOS Core Runtime",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "build": "node src/scripts/build.js",
    "type-check": "tsc --noEmit",
    "precommit": "lint-staged",
    "start": "node dist/index.js",
    "dev": "node scripts/dev-server.js",
    "audit": "npm audit",
    "setup": "bash scripts/setup-dev.sh",
    "debug": "node --inspect-brk -r ts-node/register src/index.ts",
    "docs:generate": "typedoc --options typedoc.json",
    "docs:api": "typedoc --options typedoc.json",
    "docs:serve": "docsify serve docs",
    "docs:build": "npm run docs:api && node scripts/build-docs.js",
    "docs:jsdoc": "jsdoc -c jsdoc.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "author": "ZillyOS Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "better-docs": "^2.7.2",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.2",
    "jsdoc-babel": "^0.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^5.8.3"
  }
}
