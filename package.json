{
  "name": "zilly-os",
  "version": "0.1.6",
  "description": "A rebuilt version of ElizaOS with a new design philosophy",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:modules": "node scripts/build-modules.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "zilly",
    "os",
    "event-driven",
    "modular"
  ],
  "author": "ZillyOS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/ioredis": "^5.0.0",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "chokidar": "^3.5.3",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "langchain": "^0.0.139",
    "winston": "^3.10.0",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "axios": "^1.5.0",
    "zod": "^3.22.2",
    "uuid": "^9.0.0",
    "@types/uuid": "^9.0.2",
    "yaml": "^2.3.1",
    "ajv": "^8.12.0",
    "bullmq": "^4.7.1"
  }
} 